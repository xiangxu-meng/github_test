*{
  margin: 0;
  padding: 0;
}
.scale_1px{
  position:relative;
  border:none;
}
.scale_1px:after{
  content:'';
  position:absolute;
  top: 0;
  left: 0;
  border: solid 1px red;
  -webkit-box-sizing: border-box; 
  box-sizing: border-box; 
  width: 200%; 
  height: 200%; 
  display: inline-block;
  -webkit-transform: scale(0.5); 
  transform: scale(0.5); 
  -webkit-transform-origin: left top; 
  transform-origin: left top; 
}